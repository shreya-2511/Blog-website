<%- include("header.ejs") %>

<h1>Compose</h1>

<form action="/compose" method="POST">
  <div class="form-group ">
    <label for="postTitle">Title</label>
    <input class="form-control" type="text" name="postTitle" id="postTitle" autocomplete="off" required>
  </div>
 <div class="form-group">
   <label for="postBody">Post</label>
   <textarea class="form-control" name="postBody" id="postBody" rows="5" cols="10" required></textarea>
 </div>
 <div class="form-group">
  <label for="blogger">Blogger</label>
  <input class="form-control" type="text" name="blogger" id="blogger" autocomplete="off" required>
</div>
 
 
  <button class="btn btn-primary" type="submit">Publish</button>
</form>


